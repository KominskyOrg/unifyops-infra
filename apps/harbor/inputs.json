{
  "migration_config": {
    "old_registry": {
      "host": "registry.local",
      "namespace": "docker-registry",
      "storage_size": "100Gi",
      "auth_type": "htpasswd"
    },
    "harbor": {
      "host": "harbor.local",
      "notary_host": "notary.local",
      "namespace": "harbor",
      "ingress_class": "traefik",
      "tls_mode": "cert-manager-auto",
      "cluster_issuer": "ca-issuer",
      "storage_mode": "pvc",
      "storage_sizes": {
        "registry": "200Gi",
        "chartmuseum": "10Gi",
        "jobservice": "20Gi",
        "database": "20Gi",
        "redis": "5Gi",
        "trivy": "20Gi"
      }
    },
    "argocd": {
      "namespace": "argocd",
      "project": "infra",
      "repo_url": "https://github.com/KominskyOrg/unifyops-infra",
      "branch": "main",
      "helm_repo": "https://helm.goharbor.io",
      "helm_chart": "harbor",
      "helm_version": "1.15.1"
    },
    "projects": ["dev", "staging", "prod"],
    "ci_users": {
      "dev": "robot$dev_ci",
      "staging": "robot$staging_ci",
      "prod": "robot$prod_ci"
    },
    "migration": {
      "tool": "skopeo",
      "migrate_all": true,
      "namespaces_to_update": ["dev", "staging", "prod"]
    }
  }
}